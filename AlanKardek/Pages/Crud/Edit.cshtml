@page
@model AlanKardek.Pages.Crud.EditModel

@{
    ViewData["Title"] = "Editar";
    Layout = null;
}
<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Entrar</title>
    <link rel="stylesheet" href="~/css/Index.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.4/font/bootstrap-icons.css">
</head>

<body>
    <div class="wrapper">
        <header>Cadastrar</header>
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Usuario.Id" />
            <div class="form-group field nome">
                <div class="input-area">
                    <input asp-for="Usuario.Nome" type="text" placeholder="Nome" />
                    <i class="icon bi bi-person-fill"></i>
                    <i class="error error-icon fas fa-exclamation-circle"></i>
                </div>
                <span asp-validation-for="Usuario.Nome" class="text-danger"></span>
            </div>
            <div class="form-group field email">
                <div class="input-area">
                    <input asp-for="Usuario.Email" type="text" placeholder="Email" />
                    <i class="icon fas fa-envelope"></i>
                    <i class="error error-icon fas fa-exclamation-circle"></i>
                </div>
                <span asp-validation-for="Usuario.Email" class="text-danger"></span>
            </div>
            <div class="form-group field senha">
                <div class="input-area">
                    <input asp-for="Usuario.Senha" type="text" placeholder="Senha" />
                    <i class="icon fas fa-lock"></i>
                    <i class="error error-icon fas fa-exclamation-circle"></i>
                </div>
                <span asp-validation-for="Usuario.Senha" class="text-danger"></span>
            </div>
            
            <input asp-for="Usuario.Tipo" type="hidden" onkeyup="tipo()" maxlength="1"  />

           @if (Model.Usuario.Tipo != "U")
            {

                <div class="form-group field privilegiado">
                    <div class="input-area">
                        <input asp-for="Usuario.Privilegiado" type="text" maxlength="1" onkeyup="ck1()" placeholder="Privlegiado" />
                        <i class="icon bi bi-award"></i>
                        <i class="error error-icon fas fa-exclamation-circle"></i>
                    </div>
                    <span asp-validation-for="Usuario.Privilegiado" class="text-danger"></span>
                </div>
                <input asp-for="Usuario.Turma" type="hidden" maxlenght="3" onkeyup="ck2()" placeholder="Turma" />


            }
            @if (Model.Usuario.Tipo == "U")
            {

                <input asp-for="Usuario.Privilegiado" class="form-control" maxlength="1" value="N" type="hidden"/>
                <div class="form-group field turma">
                    <div class="input-area">
                        <input asp-for="Usuario.Turma" type="text" maxlenght="3" onkeyup="ck2()" placeholder="Nome" placeholder="Turma" />
                        <i class="icon bi bi-card-list"></i>
                        <i class="error error-icon fas fa-exclamation-circle"></i>
                    </div>
                    <span asp-validation-for="Usuario.Turma" class="text-danger"></span>
                </div>

            }
            <div class="form-group field sit">
                <div class="input-area">
                    <input asp-for="Usuario.Situacao" type="text" placeholder="Situação" />
                    <i class="icon bi bi-clipboard"></i>
                    <i class="error error-icon fas fa-exclamation-circle"></i>
                </div>
                <span asp-validation-for="Usuario.Situacao" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input style="margin-top:10px" type="submit" value="Criar" class="btn btn-primary" />
            </div>
        </form>
        <button style="margin-top:10px" class="btn btn-danger"><a asp-page="./Index" style="color:black; text-decoration-line:none"><b>Sair</b></a></button>
    </div>


    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
</html>