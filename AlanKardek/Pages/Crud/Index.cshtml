@page
@model AlanKardek.Pages.Crud.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = null;
}

<!DOCTYPE html>

<html lang="pt-br">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Entrar</title>
    <link rel="stylesheet" href="~/AlanKardek.styles.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
    <link rel="icon" type="image/x-icon" href="assets/favicon.ico" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
    <link rel="stylesheet" href="css/style.css">
    <style>
        html,
        body,
        .intro {
            height: 100%;
        }

        .table-responsive {
            box-shadow: 0 0 15px black;
        }

        table td,
        table th {
            text-overflow: ellipsis;
            white-space: nowrap;
            overflow: hidden;
        }

        thead th {
            color: #fff;
        }

        .card {
            border-radius: .2rem;
        }

        .table-scroll {
            border-radius: .2rem;
        }

            .table-scroll table thead th {
                font-size: 1.25rem;
            }

        thead {
            top: 0;
            position: sticky;
        }
    </style>

</head>

<body class="d-flex flex-column h-100" style="background-color: #e9f9fc">
    <main class="flex-shrink-0" style="margin-top:10px">
        <section class="intro">
            <div class="bg-image h-100">
                <div class="mask d-flex align-items-center h-100">
                    <div class="container">
                        <div class="row justify-content-center">
                            <div class="col-12">
                                <div class="card">
                                    <div class="card-body p-0">
                                        <div class="table-responsive table-scroll" data-mdb-perfect-scrollbar="true" style="position: relative; height: 700px">
                                            <input type="text" class="form-control" name="search" id="search" placeholder="Search..." />
                                            <table width="40%" class="table table-striped mb-0 table-hover">
                                                <thead style="background-color: #813Eb6; color:white">
                                                    <tr style="font-weight: bold ;">
                                                        <td scope="col">@Html.DisplayNameFor(model => model.Usuario[0].Nome)</td>
                                                        <td scope="col">@Html.DisplayNameFor(model => model.Usuario[0].Email)</td>
                                                        <td scope="col">@Html.DisplayNameFor(model => model.Usuario[0].Senha)</td>
                                                        <td scope="col">@Html.DisplayNameFor(model => model.Usuario[0].Tipo)</td>
                                                        <td scope="col">@Html.DisplayNameFor(model => model.Usuario[0].Privilegiado)</td>
                                                        <td scope="col">@Html.DisplayNameFor(model => model.Usuario[0].Turma)</td>
                                                        <td scope="col">@Html.DisplayNameFor(model => model.Usuario[0].Id)</td>
                                                        @if (Model.Admin.Privilegiado == "S")
                                                        {
                                                            <td scope="col">Editar</td>
                                                            <td scope="col">Deletar</td>

                                                        }
                                                        <td scope="col">Informações</td>

                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @foreach (var item in Model.Usuario){
                                                        <tr>
                                                            <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                                                            <td>@Html.DisplayFor(modelItem => item.Email)</td>
                                                            <td>@Html.DisplayFor(modelItem => item.Senha)</td>
                                                            <td>@Html.DisplayFor(modelItem => item.Tipo)</td>
                                                            <td>@Html.DisplayFor(modelItem => item.Privilegiado)</td>
                                                            <td>@Html.DisplayFor(modelItem => item.Turma)</td>
                                                            <td>@Html.DisplayFor(modelItem => item.Id)</td>
                                                            @if (Model.Admin.Privilegiado == "S")
                                                            {
                                                                <td><a asp-page="./Edit" asp-route-id="@item.Id" style= "text-decoration-line:none">Editar</a></td>
                                                                <td><a asp-page="./Delete" asp-route-id="@item.Id" style="text-decoration-line:none">Deletar</a></td>
                                                            }
                                                            <td><a asp-page="./Details" asp-route-id="@item.Id" style="text-decoration-line:none">Informações</a></td>
                                                    </tr>
                                                    }
                                                </tbody>
                                            </table>
                                            <button style="margin-top:10px" class="btn btn-primary" id="btn_1"><a asp-page="./Create" style="color:black; text-decoration-line:none"><b>Criar novo Usuário</b></a></button>
                                            <button style="margin-top:10px" class="btn btn-danger" id="btn_1"><a asp-page="./Sair" style="color:black; text-decoration-line:none"><b>Sair</b></a></button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </section>
    </main>
    <script>
        const searchInput = document.getElementById("search");
        const rows = document.querySelectorAll("tbody tr");
        searchInput.addEventListener("keyup", function (event) {
            const q = event.target.value.toLowerCase();
            rows.forEach((row) => {
                row.querySelector("td").textContent.toLowerCase().startsWith(q) ?
                    (row.style.display = "table-row") :
                    (row.style.display = "none");
            });
        });
    </script>
</body>
</html>